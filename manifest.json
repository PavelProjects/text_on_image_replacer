{
    "manifest_version":2,
    "name": "Replacer",
    "description": "This extension change some key-words to pictures. Source of this extension you can find here: https://github.com/poeblo/text_on_image_replacer",
    "version": "1.0",
    "permissions": [
    "tabs","declarativeContent","activeTab","storage"
    ],
    "browser_action": {
      "default_popup": "popup_menu.html",
      "default_title":""
    },
    "content_scripts": [
        {
        "matches": [
            "*://vk.com/*"],
        "js": ["background.js"],
        "run_at": "document_idle"
        }      
    ],
    "icons":{
      "128": "images/128.png",
      "16": "images/16.png",
      "48": "images/48.png"
   }
  }